<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="col centre">
                <div>
                    <%= attachment_image_tag(current_user, :profile_image, :size =>'200x200', :style =>"border-radius: 80%", fallback: "no-image-icon.png") %>
                </div><br>

                <div>
                    <%= current_user.name %>
                </div>
                <%= link_to '',edit_users_path(:m_flg => 1), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
            </div>
            <div>
              <%= @goal.name %>
              <%= @goal.end_on %>
            </div>
        </div>

        <div class="col-5">
            <div class="col centre">
                <div>
                    <% current_user.goals.each do |goal| %>
                        <%= link_to goal.name, goal_path(goal.id) %>
                        <%= goal.end_on %>


                        <% end %>

                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="col centre">
                <%= @score %>
            </div>
        </div>



    </div>
</div>
