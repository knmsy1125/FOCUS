<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="col centre"><br>
                <div>
                    <%= attachment_image_tag(current_user, :profile_image, :size =>'200x200', :style =>"border-radius: 80%", fallback: "no-image-icon.png") %>
                </div><br>

                <h4>
                    <%= current_user.name %>
                </h4><br>
                <%= link_to '',edit_users_path(:m_flg => 1), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %><br><br><br>

            <div>
            <h2>ゴールフォーカス</h2><br><br><br>
            <h3><%= @goal.name %></h3><br><br><br><br>
            <h4><%= @goal.end_on %></h4>
            </div>
        </div>
        </div>

        <div class="col-5">
            <div class="col centre"><br>
            <h2>タスク一覧</h2><br><br>
                <div>
                   <% @goal.tasks.each do |task| %>
                    <h3><%= link_to task.title, task_path(task), class: "task_#{task.id}" %></h3><br>

                  <% end %>
                </div>

                <%= link_to "編集する", new_task_path, class: "btn btn-danger" %>
            </div>
        </div>

        <div class="col-4">
            <div class="col centre">
                <%= @score %>
            </div>
        </div>



    </div>
</div>
