<%= form_with model: @task, url: task_path, method: :patch, local: true do |f| %>
  <div>
    タスク名前<%= f.text_field :title, autofocus: true, class: "title" %>
  </div>

  <div>
    タスク詳細<%= f.text_field :boby, autofocus: true, autocomplete: "boby" %>
  </div>
<%= f.submit '編集内容を保存', class: "btn btn-success" %>
<%= link_to "削除する", task_path, method: :delete, class: "btn btn-danger" %>
<% end %>
