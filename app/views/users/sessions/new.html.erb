<div class="background">
  <div class="container">
    <div class="row">
      <div class="col centre">
        <div class="login-signup_box">

          <h1>ログイン</h1><br /><br />
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 25 %>
            </div><br /><br />

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password", size: 25 %>
            </div><br /><br /><br /><br />

            <div class="actions" style="width: 300px;">
              <%= f.submit "ログイン", class: "btn btn-info w-100" %>
            </div><br /><br /><br />
          <% end %>

          <div>
            まだアカウントをお持ちで無い方は<%= link_to "こちら", new_registration_path(resource_name) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
